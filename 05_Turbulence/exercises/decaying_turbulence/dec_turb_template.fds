&HEAD CHID='out_dec_turb', TITLE='decaying isotropic turbulence' /

&MESH IJK=32,32,32, XB=0.0,0.56549,0,0.56549,0.0,0.56549 / Comte-Bellot and Corrsin (CBC)
&TIME T_END=0.67 /

!! ===== HERE YOU CAN SPECIFY THE TURBULENCE MODEL AND ITS PARAMETERS
!! C_DEARDORFF=0.0
&MISC STRATIFICATION=.FALSE.
      PERIODIC_TEST=2
      UVW_FILE='cbc32_uvw.csv'
      CFL_MAX=0.1 /

!! ===== ADD STATISTICAL OUTPUT OF THE KINETIC ENERGY

!! ===== CHANGE, IF NEEDED, THE MOLECULAR VISCOSITY
!!&SPEC ID='BACKGROUND'
!!      BACKGROUND=.TRUE.
!!     MW=24.0551547475
!!      VISCOSITY=1.E-10/

!! OUTPUT OF THE FULL VELOCITY FIELD
&DUMP RAMP_UVW='times' /
&RAMP ID='times', T=0.00 /
&RAMP ID='times', T=0.28 /
&RAMP ID='times', T=0.67 /

!! ===== LESS RELEVANT FOR THE EXERCISE
&RADI RADIATION=.FALSE. /

&VENT MB='XMIN', SURF_ID='PERIODIC'/
&VENT MB='XMAX', SURF_ID='PERIODIC'/
&VENT MB='YMIN', SURF_ID='PERIODIC'/
&VENT MB='YMAX', SURF_ID='PERIODIC'/
&VENT MB='ZMIN', SURF_ID='PERIODIC'/
&VENT MB='ZMAX', SURF_ID='PERIODIC'/

&SLCF PBX=0.56549, QUANTITY='VELOCITY', VECTOR=.TRUE. /
&SLCF PBY=0.56549, QUANTITY='VELOCITY', VECTOR=.TRUE. /
&SLCF PBZ=0.56549, QUANTITY='VELOCITY', VECTOR=.TRUE. /

&SLCF PBZ=0.56549, QUANTITY='DENSITY' /
&SLCF PBZ=0.56549, QUANTITY='DIVERGENCE' /
&SLCF PBZ=0.56549, QUANTITY='TEMPERATURE' /

